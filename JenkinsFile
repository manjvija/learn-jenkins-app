pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'nod/:18-alpine'
                    reuseNoode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls =la
                '''
            }
        }
    }
}